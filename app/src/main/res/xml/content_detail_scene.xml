<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:autoTransition="animateToEnd"
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1200">
        <KeyFrameSet>
            <KeyAttribute
                motion:framePosition="85"
                motion:motionTarget="@string/file_name_label">
                <CustomAttribute
                    motion:attributeName="visibility"
                    motion:customIntegerValue="8" />
            </KeyAttribute>
            <KeyAttribute
                motion:framePosition="85"
                motion:motionTarget="@string/status_label">
                <CustomAttribute
                    motion:attributeName="visibility"
                    motion:customIntegerValue="4" />
            </KeyAttribute>
        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@id/file_name_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@id/file_name_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@id/status_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@id/status_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@id/file_name_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="32dp"
            android:visibility="visible"
            motion:layout_constraintEnd_toStartOf="@id/file_name_text"
            motion:layout_constraintHorizontal_weight="2"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@id/file_name_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            motion:layout_constraintBaseline_toBaselineOf="@id/file_name_label"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHorizontal_weight="6"
            motion:layout_constraintStart_toEndOf="@id/file_name_label"
            motion:layout_constraintVertical_bias="0" />
        <Constraint
            android:id="@id/status_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="32dp"
            android:visibility="visible"
            motion:layout_constraintEnd_toStartOf="@id/status_text"
            motion:layout_constraintHorizontal_weight="2"
            motion:layout_constraintStart_toStartOf="@id/file_name_label"
            motion:layout_constraintTop_toTopOf="@id/file_name_barrier" />
        <Constraint
            android:id="@id/status_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            motion:layout_constraintBaseline_toBaselineOf="@id/status_label"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHorizontal_weight="6"
            motion:layout_constraintStart_toEndOf="@id/status_label"
            motion:layout_constraintVertical_bias="0" />
    </ConstraintSet>
</MotionScene>
